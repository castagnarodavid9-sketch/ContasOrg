<%= form_with(model: contrato) do |form| %>
  <% if contrato.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contrato.errors.count, "error") %> prohibited this contrato from being saved:</h2>

      <ul>
        <% contrato.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Nome da empresa :" %><br />
    <%= form.text_field :nome_empresa, placeholder: "Digite um nome", title: "Informe o nome da empresa que vai ser criado o contrato", required: true %>
  </div>

  <div class="field">
    <%= form.label "Salário bruto :" %><br />
    <%= form.text_field :salario_bruto, placeholder: "Digite um valor", title: "Informe o salário bruto por mensal", required: true %>
  </div>

  <div class="field">
    <%= form.label "Horas semanais trabalhadas" %><br />
    <%= form.number_field :horas_semanais, placeholder: "Digite um valor", title: "Informe suas horas semanais", required: true %>
  </div>

  <div>
    <%= form.submit "Criar contrato" %>
  </div>
<% end %>
