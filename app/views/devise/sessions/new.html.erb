<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center px-3">
  <div class="card shadow p-4 w-100" style="max-width: 400px;">
    
    <h3 class="text-center mb-4">Login</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-control form-control-lg",
              placeholder: "Digite seu e-mail" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              class: "form-control form-control-lg",
              placeholder: "Digite sua senha" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
          <%= f.label :remember_me, class: "form-check-label", for: "remember_me" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Esqueci minha senha",
            new_password_path(resource_name),
            class: "text-decoration-none small" %>
    </div>

  </div>
</div>
